                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Status, UpdateSourceTrigger=PropertyChanged}" Value="{x:Static ftpClient:DownloadStatus.Paused}">
                <Setter Property="Height" Value="16" />
