                <Setter Property="Fill" Value="{StaticResource AccentColorBrush}" />
                <Setter Property="OpacityMask">
                    <Setter.Value>
                        <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_timer_play}" />
                    </Setter.Value>
